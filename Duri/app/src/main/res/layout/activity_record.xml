<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#E6E6E6">    <LinearLayout        android:id="@+id/imageView"        android:layout_width="match_parent"        android:layout_height="50dp"        android:orientation="vertical"        android:background="#FFFFFF"        >        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="14dp"            android:text="녹음하기"            android:layout_gravity="center_horizontal"            />></LinearLayout>    <ImageButton        android:id="@+id/option_btn"        android:layout_width="20dp"        android:layout_height="20dp"        android:layout_marginRight="15dp"        android:layout_marginTop="15dp"        android:layout_alignParentRight="true"        android:layout_alignParentTop="true"        android:background="@drawable/btn_settings_selector"        />    <Button        android:id="@+id/btn_record"        android:layout_width="60dp"        android:layout_height="60dp"        android:layout_marginTop="46dp"        android:layout_marginBottom="9.5dp"        android:layout_below="@+id/imageView"        android:layout_centerHorizontal="true"        android:background="@drawable/btn_record2_selector"/>    <TextView        android:id="@+id/textView10"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/btn_record"        android:layout_centerHorizontal="true"        android:layout_marginBottom="31.5dp"        android:text="00:00" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_above="@+id/music_cnt"        android:layout_alignParentStart="true"        android:layout_below="@+id/textView10"        android:orientation="vertical"        android:background="#FFFFFF"        android:weightSum="1">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="47dp"            android:layout_weight="0.31"            android:background="#A9D191"            android:orientation="vertical">            <TextView                android:id="@+id/list_label"                android:layout_width="wrap_content"                android:layout_height="50dp"                android:layout_gravity="center_horizontal"                android:layout_marginTop="16dp"                android:text="녹음된 음성목록"                android:textColor="#FFFFFF" />        </LinearLayout>        <ListView            android:id="@+id/lst_record"            android:layout_width="match_parent"            android:layout_height="258dp" />    </LinearLayout>    <RelativeLayout        android:id="@+id/music_cnt"        android:layout_width="fill_parent"        android:layout_height="50dp"        android:layout_alignParentBottom="true"        android:background="#81b530"        >        <TextView            android:id="@+id/musicname_txt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_marginLeft="30dp"            android:layout_marginTop="15dp"            android:text="소원"            android:textColor="#FFFFFF" />        <Button            android:id="@+id/onoff_btn"            android:layout_width="28dp"            android:layout_height="28dp"            android:layout_alignParentRight="true"            android:layout_marginRight="30dp"            android:layout_marginTop="12dp"            android:background="@drawable/btn_pause_selector"            />    </RelativeLayout></RelativeLayout>